{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Clean Current",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/Clean-LocalGitFolder.ps1",
            "args": [
                "-Verbose",
                "-LocalGitFolder $PSScriptRoot"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Clean Source",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/Clean-LocalGitFolder.ps1",
            "cwd": "${workspaceFolder}",
            "args": [
                "-Verbose",
                "-LocalGitFolder $env:USERPROFILE/source"
            ],
        }
    ]
}